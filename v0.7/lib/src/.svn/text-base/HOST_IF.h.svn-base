            cout <<"ddddddddddddd" <<endl;
        }else{
            cout <<"1" <<endl;
            reqBufferPoint = (reqBufferPoint + 1) % Q_SIZE;
        }

    }else               //data
    {
        uint transDataPoint = Find_Request(transReq.iId);

        wait((double)transReq.iLen * UNIT_OF_REQUEST / IF_BANDWIDTH * 1000, SC_NS);

//        if(!HOST_Master.write(DATA_ADDR, (unsigned char *)requestData[transDataPoint], (unsigned int)transReq.iLen*UNIT_OF_REQUEST)){
//            ABORT(1, "Data trans fail");
//        }

        HOST_Master.write(0x28, (unsigned char *)requestData[transDataPoint],transReq.iLen*UNIT_OF_REQUEST);
        wait(SC_ZERO_TIME); 
        //cout <<"2" <<endl;
        //Delete_Request(transDataPoint);
        Delete_Request(transReq.iId);
        transDataFlag = false;

    }
