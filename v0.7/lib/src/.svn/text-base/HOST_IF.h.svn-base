void
HOST_IF::HOST_Interface()
{
	if ( dbgFlag[PORTS] ) DBG_MSG( "HOST_Interface invoked because of e_TrigHost event" );
    
    uint    i;
    uint    repeatCount;
    uint    op;
    uint    addr;
    uint64  len;
    double  time;
    double startTime = 0;
    cout << "--------------------------------------------------------------" << endl;
    cout << "---------------------- Simulation Start ----------------------" << endl;

    while(1){

        cout << "---------------------- Simulation Initialize ----------------------" << endl;
        
        while(!feof(traceFile)){
            fscanf(traceFile, "%u\t%llu\t%u\t%lf\n",&addr, &len, &op, &time);
    
            operationCount++;

            if((operationCount % 1000) == 0){
                cout << "[" << sc_core::sc_time_stamp() << "] " << __FILE__ << ":" << __LINE__ << " " << "Operation Count =  "<< operationCount << endl;
            }

            //////align request////////////
            ABORT(len == 0, "Request length is 0");
            //wait(100, SC_NS);
            if(op == HOST_READ){
                repeatCount = Cal_repeatCount(len);

                do{ 

                    if(Check_Buffer_Full() == true)
                        wait(e_DeleteReqBuffer);
                    uint length = len > MAX_REQ_LEN ?  MAX_REQ_LEN : len;
                    uint address = addr + length > MAX_ADDR ? (addr + length) % MAX_ADDR : addr;
                    Push_Request(address, length, HOST_WRITE);

                    e_TrigReqTrans.notify();

                    addr = addr + MAX_REQ_LEN;
                    len  = len - MAX_REQ_LEN;

                    repeatCount--;

                }while(repeatCount > 0);
            }
        }
        fclose(traceFile);
        traceFile = fopen("trace.txt","r");

        cout << "---------------------- Simulation Initialize End ----------------------" << endl;
        wait(10000, SC_NS);
        startFlag = true;
        startTime = sc_time_stamp().value()/1000.0;

        while(!feof(traceFile)){
            fscanf(traceFile, "%u\t%llu\t%u\t%lf\n",&addr, &len, &op, &time);
        
            operationCount++;

            if((operationCount % 1000) == 0){
                cout << "start [" << sc_core::sc_time_stamp() << "] " << __FILE__ << ":" << __LINE__ << " " << "Operation Count =  "<< operationCount << endl;
            }
            
            
            //////align request////////////
            ABORT(len == 0, "Request length is 0");
     
            //second
            time = time*1000000000.0 + startTime;
            //us
            //time = time/1000.0 + startTime;
            //10^-7
            //time = time/100.0 + startTime;

            //time unit  = second
            if((time) > ((double)sc_time_stamp().value()/1000.0)){
                if((operationCount % 1000) == 0){
                    cout << time << "          " << sc_time_stamp().value()/1000.0 << endl;
                }
                wait(time-((double)sc_time_stamp().value()/1000.0), SC_NS);
            }
            
            //cout << time << "          " << sc_time_stamp().value()/1000.0 << endl;
            //time unit  = second
            repeatCount = Cal_repeatCount(len);

            do{ 

                if(Check_Buffer_Full() == true)
                    wait(e_DeleteReqBuffer);

                uint length = len > MAX_REQ_LEN ?  MAX_REQ_LEN : len;
                uint address = addr + length > MAX_ADDR ? (addr + length) % MAX_ADDR : addr;
                Push_Request(address, length, op);

                e_TrigReqTrans.notify();

                addr = addr + MAX_REQ_LEN;
                len  = len - MAX_REQ_LEN;

                repeatCount--;

            }while(repeatCount > 0);
        }

        while(1){
            if(Check_Simulation_End() == true){

                cout << "--------------------------------------------------------------" << endl;
                cout << "---------------------- Simulation End ------------------------" << endl;
                wait(10000, SC_MS);
                exit(1);
            }
            wait(10, SC_NS);
        }

        wait();
    }
}

